<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FC"
    tools:context=".view.personel.MedikalDeviceDetail">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMedikalDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/turkuaz"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_home">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/ralewaymedium"
            android:text="Hastanem"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_60sdp"
            android:src="@drawable/logowhite"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="-40dp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_title_hospital_name_detail"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_14ssp"
        android:fontFamily="@font/ralewaymedium"
        android:text="Bezmialem Hastanesi"
        android:textColor="#5A5A5A"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarMedikalDetail" />

    <ImageView
        android:id="@+id/iv_device_detail"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_hospital_name_detail"
        tools:srcCompat="@tools:sample/avatars" />



    <TextView
        android:id="@+id/tv_detail_fixtureNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/iv_device_detail"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_hospital_name_detail"
        app:layout_constraintStart_toStartOf="@+id/tv_title_hospital_name_detail"
        tools:layout_editor_absoluteY="318dp" />


    <TextView
        android:id="@+id/tv_detail_marka"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_fixtureNo"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_hospital_name_detail"
        app:layout_constraintStart_toStartOf="@+id/tv_title_hospital_name_detail"
        tools:layout_editor_absoluteY="318dp" />

    <TextView
        android:id="@+id/tv_detail_tanim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_marka"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_hospital_name_detail"
        app:layout_constraintStart_toStartOf="@+id/tv_title_hospital_name_detail"
        tools:layout_editor_absoluteY="318dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
