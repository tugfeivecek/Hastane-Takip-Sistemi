<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNoticeLibrary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:background="#F2F2F2">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emergencygreen" />

        <TextView
            android:id="@+id/tvEmergencyArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/ralewaymedium"
            android:text="YeÅŸil Alan"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@+id/pbGeneral"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBekleyen"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:text="Bekleyen"
            android:textColor="#B6B6B6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/pbGeneral"
            app:layout_constraintTop_toBottomOf="@+id/pbGeneral" />

        <ProgressBar
            android:id="@+id/pbGeneral"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:indeterminateOnly="false"
            android:progress="60"
            android:progressDrawable="@drawable/circle"
            app:layout_constraintStart_toStartOf="@+id/tvEmergencyArea"
            app:layout_constraintTop_toBottomOf="@+id/tvEmergencyArea" />

        <TextView
            android:id="@+id/pbGeneralFullResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ralewaymedium"
            android:text="%60"
            android:textColor="@color/turkuaz"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@+id/pbGeneral"
            app:layout_constraintEnd_toEndOf="@+id/pbGeneral"
            app:layout_constraintStart_toStartOf="@+id/pbGeneral"
            app:layout_constraintTop_toTopOf="@+id/pbGeneral" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></View>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>