<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/white">


        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text=""
            android:fontFamily="@font/ralewaymedium"
            android:textColor="@color/turkuaz"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toEndOf="@+id/image_notice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_notice_date"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:fontFamily="@font/ralewaymedium"
            android:text=""
            android:textColor="@color/yazigri"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_notice_content" />

        <ImageView
            android:id="@+id/image_notice"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bottomnotice" />

        <TextView
            android:id="@+id/tv_notice_content"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text=""
            android:fontFamily="@font/ralewaymedium"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:layout_marginBottom="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="@+id/tv_notice_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_notice_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>