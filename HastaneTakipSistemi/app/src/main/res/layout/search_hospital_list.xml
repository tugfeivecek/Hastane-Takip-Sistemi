<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_search_name"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/ralewaymedium"
            android:text="Bezmi Alem Hastanesi"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_hospital_address"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/ralewayregular"
            android:text="Topkapı, Adnan Menderes Blv., 34093 Fatih/İstanbul"
            android:textColor="@color/yazigri"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="@+id/tv_search_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_search_name" />

        <TextView
            android:id="@+id/tv_hospital_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/ralewaymedium"
            android:text="Kapasite:50"
            android:textColor="@color/turuncu"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/tv_hospital_address"
            app:layout_constraintTop_toBottomOf="@+id/tv_hospital_address" />

        <TextView
            android:id="@+id/tv_patient_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ralewaymedium"
            android:text="Hasta Sayısı:12"
            android:textColor="@color/turuncu"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/green"
            app:layout_constraintStart_toStartOf="@+id/tv_hospital_capacity"
            app:layout_constraintTop_toBottomOf="@+id/tv_hospital_capacity"></View>
        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/gri"
            app:layout_constraintStart_toStartOf="@+id/tv_patient_count"
            app:layout_constraintTop_toBottomOf="@+id/tv_patient_count"></View>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
