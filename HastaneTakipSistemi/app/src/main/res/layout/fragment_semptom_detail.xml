<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F8FC">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/turkuaz"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/toolbar_home">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/ralewaymedium"
                android:paddingTop="@dimen/_5sdp"
                android:text="Hastanem"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_480sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarHome">

            <ImageButton
                android:id="@+id/image_button_brain"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.638"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tVYazi"
                app:srcCompat="@drawable/brain" />

            <TextView
                android:id="@+id/tvNearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/ralewayregular"
                android:text="Beyin"
                android:textColor="@color/white"
                android:textSize="@dimen/_24ssp"
                app:layout_constraintStart_toStartOf="@+id/image_button_brain"
                app:layout_constraintTop_toTopOf="@+id/image_button_brain" />


            <ImageButton
                android:id="@+id/image_btn_lungs"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="@+id/image_button_brain"
                app:layout_constraintTop_toBottomOf="@+id/image_button_brain"
                app:srcCompat="@drawable/lungs" />

            <TextView
                android:id="@+id/tv_lung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_42sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/ralewayregular"
                android:text="Akciğer"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toBottomOf="@+id/image_btn_lungs"
                app:layout_constraintStart_toStartOf="@+id/image_btn_lungs" />


            <ImageButton
                android:id="@+id/image_button_heart"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toEndOf="@+id/image_btn_lungs"
                app:layout_constraintTop_toBottomOf="@+id/image_button_brain"
                app:srcCompat="@drawable/heart" />

            <TextView
                android:id="@+id/tv_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_54sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/ralewayregular"
                android:text="Kalp"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toBottomOf="@+id/image_button_heart"
                app:layout_constraintStart_toEndOf="@+id/image_btn_lungs" />


            <TextView
                android:id="@+id/tv_semptom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/ralewaymedium"
                android:text="Semptom Seçiniz,"
                android:textColor="@color/yazigri"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tVYazi"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/ralewaymedium"
                android:text="Lütfen aşağıdan semptom seçiniz"
                android:textColor="@color/yazigri"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@+id/tv_semptom"
                app:layout_constraintTop_toBottomOf="@+id/tv_semptom" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>