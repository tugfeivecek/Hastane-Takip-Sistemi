<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HastaneTakipSistemi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/turkuaz</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/gri</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BrandsCategoriesTabLayoutStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ralewaymedium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/tl_color_selector</item>
        <item name="hintTextColor">@color/gri</item>
        <item name="android:textColorHint">@color/gri</item>
        <item name="prefixTextColor">@color/black</item>
        <item name="errorTextColor">@color/turkuaz</item>
        <item name="errorIconTint">@color/turkuaz</item>
        <item name="startIconTint">@color/turkuaz</item>
        <item name="endIconTint">@color/gri</item>
    </style>
</resources>